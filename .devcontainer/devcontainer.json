{
  "name": "Zelen Restaurant API",
  "dockerComposeFile": "../docker-compose.codespaces.yml",
  "service": "app",
  "workspaceFolder": "/workspaces/backend_alsu",

  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/php:1": {
      "version": "8.2",
      "installComposer": true
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "lts"
    }
  },

  "initializeCommand": "echo 'Инициализация devcontainer...'",

  "onCreateCommand": "echo 'Контейнер создан, начинаем настройку...'",

  "customizations": {
    "vscode": {
      "extensions": [
        "bmewburn.vscode-intelephense-client",
        "mikestead.dotenv",
        "ms-azuretools.vscode-docker"
      ],
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php"
      }
    }
  },

  "forwardPorts": [8000, 3306, 8080],

  "portsAttributes": {
    "8000": {
      "label": "Laravel App",
      "onAutoForward": "notify"
    },
    "3306": {
      "label": "MySQL",
      "onAutoForward": "silent"
    },
    "8080": {
      "label": "phpMyAdmin",
      "onAutoForward": "notify"
    }
  },

  "postCreateCommand": "bash ${containerWorkspaceFolder}/.devcontainer/setup-codespaces.sh",

  "postStartCommand": "cd ${containerWorkspaceFolder} && nohup php artisan serve --host=0.0.0.0 --port=8000 > /tmp/laravel.log 2>&1 & echo 'Server started'",

  "remoteUser": "root"
}
