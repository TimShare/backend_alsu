APP_NAME="Zelen Restaurant API"
APP_ENV=development
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000
APP_TIMEZONE=UTC
APP_LOCALE=ru

LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration для Docker/Codespaces
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=zelen_restaurant
DB_USERNAME=zelen_user
DB_PASSWORD=zelen_password

BROADCAST_DRIVER=log
CACHE_DRIVER=file
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=cookie
SESSION_LIFETIME=120

# CORS Configuration для Codespaces
# Codespaces использует формат: https://CODESPACE-NAME-PORT.app.github.dev
SANCTUM_STATEFUL_DOMAINS="localhost:3000,127.0.0.1:3000,*.app.github.dev"
SESSION_DOMAIN=
CORS_ALLOWED_ORIGINS="http://localhost:3000,http://127.0.0.1:3000,https://*.app.github.dev"
